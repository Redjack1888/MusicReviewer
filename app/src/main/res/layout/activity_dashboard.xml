<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="@dimen/padding_margin_1"
            android:text="@string/dashboard_text_view_explaination"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_1"
            android:background="@android:color/black">

            <TextView
                android:id="@+id/username_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_24"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/work_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/reviewer"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_trophy_white_24dp"
                android:drawablePadding="@dimen/padding_margin_1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_trophy_white_24dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_margin_1">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/black"
                android:hint="@string/search_by_titles_or_bands"
                android:padding="@dimen/padding_margin_1"
                tools:targetApi="lollipop" />

            <ImageView
                android:id="@+id/search_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:scaleType="center"
                android:src="@drawable/ic_magnify_black_24dp"
                android:contentDescription="@string/search_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/padding_margin_1"
            android:layout_marginRight="@dimen/padding_margin_1">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                style="@style/CategoryTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>
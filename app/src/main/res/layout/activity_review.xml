<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="@dimen/padding_margin_1"
            android:text="@string/user_rate_and_write"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_margin_1"
            android:text="@string/reviewer_opinions"
            android:textSize="@dimen/font_24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_margin_1"
            android:layout_marginStart="@dimen/padding_margin_1"
            android:text="@string/recommend_this_album"
            android:textSize="@dimen/font_20"
            android:textStyle="bold|italic" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:rating="3.0"
            android:scaleX=".5"
            android:scaleY=".5"
            android:stepSize="1.0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/padding_margin_1"
                android:layout_marginStart="@dimen/padding_margin_1"
                android:layout_weight="1"
                android:text="@string/interviews_events_etc"
                android:textSize="@dimen/font_16"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/padding_margin_1"
                android:layout_marginRight="@dimen/padding_margin_1"
                android:textOff="@android:string/no"
                android:textOn="@android:string/yes" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/padding_margin_1"
                android:layout_marginStart="@dimen/padding_margin_1"
                android:layout_weight="1"
                android:text="@string/purchase_this_album"
                android:textSize="@dimen/font_16"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/padding_margin_1"
                android:layout_marginRight="@dimen/padding_margin_1"
                android:textOff="@android:string/no"
                android:textOn="@android:string/yes" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_1"
            android:text="@string/notes_for_the_label"
            android:textSize="@dimen/font_20"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_margin_1"
            android:layout_marginStart="@dimen/padding_margin_1"
            android:hint="@string/share_a_private_note_hint"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_margin_1"
            android:text="@string/send_opinions"
            android:textSize="@dimen/font_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_margin_1"
            android:text="@string/review_this_album"
            android:textSize="@dimen/font_24"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_margin_1"
            android:layout_marginStart="@dimen/padding_margin_1"
            android:ems="10"
            android:hint="@string/your_review_hint"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_1"
            android:text="@string/add_link_s"
            android:textSize="@dimen/font_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_margin_1"
            android:layout_marginStart="@dimen/padding_margin_1"
            android:text="@string/link_or_links_here" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_margin_1"
            android:text="@string/send_review"
            android:textSize="@dimen/font_16"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
